"""
Pigeon Planner database tool startup script
"""


import os
import os.path
import sys

try:
    import pygtk; pygtk.require('2.0')
except:
    print "The Python GTK (PyGTK) bindings are required to run this program."
    sys.exit(1)

import gobject
gobject.threads_init()

try:
    import gtk
except:
    print "The GTK+ runtime is required to run this program."
    sys.exit(1)


if __name__ == "__main__":
    # Detect our module path
    pp_dir = os.path.join(os.path.dirname(sys.argv[0]), '../pigeonplanner')
    prefix = os.path.abspath(os.path.normpath(pp_dir))
    if not prefix.startswith('/usr'):
        sys.path.insert(0, pp_dir)

    import startup
    app = startup.Startup()
    app.setup_logging()
    app.setup_locale()
    app.setup_theme()
    app.setup_database()

    from ui import databasetool
    dbtool = databasetool.DBWindow(app.db)

    gtk.main()

