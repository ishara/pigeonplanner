"""
Pigeon Planner database tool startup script
"""


import os
import os.path
import sys

try:
    import pygtk; pygtk.require('2.0')
except:
    print "The Python GTK (PyGTK) bindings are required to run this program."
    sys.exit(1)

import gobject
gobject.threads_init()

try:
    import gtk
except:
    print "The GTK+ runtime is required to run this program."
    sys.exit(1)


def __detect_package():
    if hasattr(sys, 'frozen'):
        # py2exe'd package, sys.prefix is set to the program's lib/
        return os.path.join(sys.prefix, 'library.zip', 'pigeonplanner')
    else:
        exec_dir = os.path.abspath(os.path.dirname(sys.argv[0]))
        if exec_dir.startswith('/usr'):
            # Program is installed, use a common prefix to locate the package
            for prefix in [sys.prefix, "/usr", "/usr/local"]:
                package = os.path.join(prefix, "pigeonplanner")
                if os.path.exists(package):
                    return package
        # We are running from the source folder
        return os.path.normpath(os.path.join(exec_dir, '../pigeonplanner'))


if __name__ == "__main__":
    sys.path.insert(0, __detect_package())

    import startup
    app = startup.Startup()
    app.setup_logging()
    app.setup_locale()
    app.setup_theme()
    app.setup_database()

    from ui import databasetool
    dbtool = databasetool.DBWindow(app.db)

    gtk.main()

